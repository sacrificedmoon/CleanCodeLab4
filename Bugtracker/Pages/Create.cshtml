@page
@model Bugtracker.Pages.CreateModel
@{
}
<h1>Create</h1>

<h4>Bug</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Bug.Description" class="control-label"></label>
                <input id="description-input" asp-for="Bug.Description" class="form-control" data-cy="bug-description" />
                <span asp-validation-for="Bug.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input id="submit-button" type="submit" value="Create" class="btn btn-primary" data-cy="create-button"/>
            </div>
        </form>
    </div>
</div>